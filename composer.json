{
    "name": "liquetsoft/fias-symfony",
    "type": "symfony-bundle",
    "description": "Symfony bundle for FIAS database importer.",
    "keywords": ["php", "fias", "symfony"],
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "liquetsoft/fias-component": "^9.0",
        "symfony/framework-bundle": "^5.0",
        "doctrine/doctrine-bundle": "^2.0",
        "doctrine/orm": "^2.4",
        "ramsey/uuid-doctrine": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "symfony/phpunit-bridge": "^5.0",
        "fakerphp/faker": "^1.7",
        "friendsofphp/php-cs-fixer": "^2.16",
        "sebastian/phpcpd": "^6.0",
        "vimeo/psalm": "^4.0",
        "nette/php-generator": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Liquetsoft\\Fias\\Symfony\\LiquetsoftFiasBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit --configuration phpunit.xml.dist",
        "coverage": "vendor/bin/phpunit --configuration phpunit.xml.dist --coverage-html=Tests/coverage",
        "fixer": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist -v --allow-risky=yes",
        "linter": [
            "vendor/bin/php-cs-fixer fix --config=.php_cs.dist -v --dry-run --stop-on-violation --allow-risky=yes",
            "vendor/bin/phpcpd ./ --exclude vendor --exclude Tests --exclude Entity",
            "vendor/bin/psalm --show-info=true"
        ],
        "entities": [
            "php -f Resources/build/generate_entities.php",
            "vendor/bin/php-cs-fixer fix --config=.php_cs.dist --allow-risky=yes -q"
        ]
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/liquetsoft/fias-symfony"
        }
    ]
}
